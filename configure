AVIS_HOME=/usr/local
PROTON_HOME=/usr/local
WITH_AVIS=
WITH_PROTON=
WITH_UNITTESTS=
INSTALL_DIR=/opt/openmama
EXTRA=

# Parse the inputs
for i in $*
do
    case $i in
        --avis-path=*)
            AVIS_HOME=${i#*=}
            WITH_AVIS="--with-avis=${AVIS_HOME}"
            ;;
        --proton-path=*)
            PROTON_HOME=${i#*=}
            WITH_PROTON="--with-proton=${PROTON_HOME}"
            ;;
        --gtest-path=*)
            WITH_UNITTESTS="--with-unittests=${i#*=}"
            ;;
        --prefix=*)
            INSTALL_DIR=${i#*=}
            EXTRA="${EXTRA} ${i}"
            ;;
        *)
            # unknown options are passed straight through
            EXTRA="${EXTRA} ${i}"
        ;;
    esac
done

# Store the install directory for use by Makefile:
cat <<EOF >prefix.txt
${INSTALL_DIR}
EOF

# configure common
cd common/c_cpp
./configure $EXTRA $WITH_UNITTESTS
cd -

#configure mama
cd mama/c_cpp
./configure $WITH_AVIS $WITH_PROTON $WITH_UNITTESTS $EXTRA
cd -

#configure mamajni
cd mama/jni
./configure $EXTRA
cd -

#configure mamda
cd mamda/c_cpp
./configure $EXTRA $WITH_UNITTESTS
cd -
